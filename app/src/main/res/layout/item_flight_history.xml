<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp">

            <TextView
                android:id="@+id/historyNamePassenger"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@id/historyNumberPassportPassenger"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/historyNumberPassportPassenger"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/historyNamePassenger"
                app:layout_constraintEnd_toStartOf="@id/historyPassengerAge"/>

            <TextView
                android:id="@+id/historyPassengerAge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/historyNumberPassportPassenger"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/descriptionDeparture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/departure"
                android:textSize="10sp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toStartOf="@id/descriptionDestination"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/historyNamePassenger" />

            <TextView
                android:id="@+id/descriptionDestination"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/destination"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/descriptionDeparture"
                app:layout_constraintTop_toTopOf="@id/descriptionDeparture" />

            <TextView
                android:id="@+id/historyDeparture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@id/historyDestination"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/descriptionDeparture" />

            <TextView
                android:id="@+id/historyDestination"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/historyDeparture"
                app:layout_constraintTop_toBottomOf="@id/descriptionDestination" />

            <TextView
                android:id="@+id/descriptionDateDepart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/depart_text"
                android:textSize="10sp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toStartOf="@id/descriptionDateArrival"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/historyDeparture" />

            <TextView
                android:id="@+id/descriptionDateArrival"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/arrival_text"
                android:textSize="10sp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/descriptionDateDepart"
                app:layout_constraintTop_toBottomOf="@id/historyDestination" />

            <TextView
                android:id="@+id/historyDateDepart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@id/historyDateArrival"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/descriptionDateDepart" />

            <TextView
                android:id="@+id/historyDateArrival"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/historyDeparture"
                app:layout_constraintTop_toBottomOf="@id/descriptionDateArrival" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>